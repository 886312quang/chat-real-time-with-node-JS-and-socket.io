<body>  
        <ul id="menu" class="shadow p-2 mb-4 rounded">
            <li><a href="">Sign</a></li>
            <li><a href="">LogOut</a></li>
            <li><a href="">BackGround</a></li>
            <li><a href="">LeaveRoom</a></li>
        </ul>
    <div id="checkMenu" class="checkMenu">
        <i class="fas fa-bars"></i>
    </div>

    <div id="right" class="container text-center right">
        <h1 id="content">Chat box</h1>
        <div class="row">
            <div class="col-sm-4">
                <div class="box">
                    <div class="userList shadow p-3 mb-5  rounded">
                        <h1>User Online</h1>
                        <div class="boxList">
                            <div id="listContent">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="createRoom shadow p-3 mb-5  rounded">
                    <h1>Room</h1>
                    <div class="roomList">
                        <div id="roomContent">
                        </div>
                    </div>
                </div>
                <input type="text" id="roomName" class="form-control create" placeholder="Enter room">
                <button id="createRoom" class="btn btn-danger">Create</button>
            </div>
            <div class="col-sm-8">
                <div id="createUser" class="createUser shadow p-3 mb-5  rounded">
                    <span id="testLogin"></span>
                    <input type="text" id="username" class="form-control create" placeholder="Enter name">
                    <button id="create" class="btn btn-danger">Create</button>
                    <div id="status"></div>
                </div>
                <div id="chatForm">
                    <div id="sayHi" class="sayHi">Hello <span id="currentUser"></span>
                        <div id="sayHi"> <span id="currentRoom"></span>
                            <a id="exit" href=""><i class="fad fa-sign-out-alt"></i></a>
                        </div>
                        <div class="card shadow p-3 mb-5  rounded">
                            <div id="messages">
                            </div>
                            <div class="activeMessages" id="activeMessages"></div>
                        </div>
                        <div class="form-group">
                            <label for=""></label>
                            <textarea class="form-control textarea" name="textarea" id="textarea" rows="3"
                                placeholder="Enter messages">
                       </textarea>
                       <button id="sendMessages" class="btn"><i class="fad fa-paper-plane"></i></button>
                        </div>
                     
                    </div>
                </div>

            </div>
        </div>
    </div>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
